<p id="notice"><%= notice %></p>
<h1>みんなの投稿</h1>
<table>
  <thead>
    <tr>
      <th>投稿した人</th>
      <th>写真</th>
      <th>タイトル：</th>
      <th>メッセージ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.user.name %></td>
        <% if  feed.image_url %>
          <td><%= image_tag feed.image_url %></td>
        <% end %>
        <td><%= feed.title %></td>
        <td><%= feed.content %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
        <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Feed', new_feed_path %>
